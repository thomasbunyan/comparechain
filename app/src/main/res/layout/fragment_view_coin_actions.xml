<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/breakLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/tabIndicatorText" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/breakLine3"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@+id/alertButton"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/favoritecol"/>

        <ImageView
            android:id="@+id/simButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_add"
            android:tint="@color/colorPrimary"/>

    </LinearLayout>

    <View
        android:id="@+id/breakLine4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/buttons"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:background="@color/tabIndicatorText" />
</RelativeLayout>