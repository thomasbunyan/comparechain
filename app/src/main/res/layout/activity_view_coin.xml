<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ViewCoinWindow.ViewCoinWindow">


    <fragment
        android:id="@+id/coinDataFragment"
        android:name="qmul.se.g31.comparechain.ViewCoinWindow.CoinDataFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_view_coin_data"/>

    <fragment
        android:id="@+id/coinFavoriteFragment"
        android:name="qmul.se.g31.comparechain.ViewCoinWindow.FavoriteCoinFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinDataFragment"
        tools:layout="@layout/fragment_view_coin_actions"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coinFavoriteFragment"
        android:text="GRAPH IN HERE" />


</RelativeLayout>